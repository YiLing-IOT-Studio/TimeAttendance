<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.attendance.mapper.LetterMapper">
    <resultMap id="letter" type="Letter">
        <id property="id" column="id"/>
        <result property="sender" column="sender"/>
        <result property="accepter" column="accepter"/>
        <result property="date" column="date"/>
        <result property="time" column="time"/>
        <result property="main_content" column="main_content"/>
        <result property="all_content" column="all_content"/>
        <result property="status" column="status"/>
    </resultMap>

    <select id="getLetterNumByName" parameterType="String" resultType="Long">
        SELECT
        count(*)
        FROM
        letter
        WHERE
        accepter = #{accept_name}
    </select>

    <select id="getAllLetterByAccepter" parameterType="String" resultType="letter">
        SELECT
        id,sender,accepter,date,time,main_content,all_content,status
        FROM
        letter
        WHERE
        accepter = #{accept_name}
    </select>

    <insert id="addLetter" parameterType="letter">
        INSERT INTO
        letter(sender,accepter,date,time,main_content,all_content)
        VALUES
        (#{sender},#{accepter},#{date},#{time},#{main_content},#{all_content})
    </insert>

    <update id="letterState" parameterType="Integer">
        UPDATE
        letter
        SET
        status="isRead"
        WHERE
        id = #{id}
    </update>

