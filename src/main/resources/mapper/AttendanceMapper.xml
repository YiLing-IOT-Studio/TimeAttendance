<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.attendance.mapper.AttendanceMapper">
    <resultMap id="attendance" type="Attendance">
        <id property="id" column="id"/>
        <result property="staffName" column="staff_name"/>
        <result property="inTime" column="in_time"/>
        <result property="outTime" column="out_time"/>
        <result property="attendance" column="attendance"/>
    </resultMap>

    <sql id="Base_Column_List" >
        id, staff_name, come_time, leave_time, attendance
    </sql>

    <insert id="add" parameterType="Attendance">
        INSERT INTO
        attendance_info(staff_name,come_time,leave_time,attendance)
        VALUES
        (#{staffName},#{comeTime},#{leaveTime})
    </insert>
</mapper>